{
  "manifest_version": 2,
  "name"            : "SpigotNotifier",
  "description"     : "SpigotNotifier",
  "short_name"      : "SN",
  "version"         : "2.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon" : "img/icon512.png"
  },
  "background":{
        "page":"background.html"
  },
  "permissions": [
    "debugger",
    "storage",
        "activeTab",
        "notifications",
        "storage",
        "tabs",
        "webNavigation", 
        "*://*/*",
        "tabs", "http://www.spigotmc.org/*"
    ]
}